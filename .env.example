# Polymarket CLOB API credentials
# Get these from: https://docs.polymarket.com
POLYMARKET_API_KEY=
POLYMARKET_API_SECRET=
POLYMARKET_PASSPHRASE=

# Your wallet private key (for signing orders)
POLYMARKET_PRIVATE_KEY=

# ── News Intelligence APIs ──────────────────────────────────
# At least one LLM API key is recommended for best results.
# Without an LLM key, the bot falls back to keyword heuristics.

# Anthropic Claude API (preferred for analysis)
# Get from: https://console.anthropic.com
ANTHROPIC_API_KEY=

# OpenAI API (fallback LLM)
# Get from: https://platform.openai.com
OPENAI_API_KEY=

# NewsAPI (100 free requests/day)
# Get from: https://newsapi.org
NEWSAPI_KEY=

# GNews API (100 free requests/day)
# Get from: https://gnews.io
GNEWS_API_KEY=

# Optional: Telegram notifications
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
